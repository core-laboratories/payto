{
	"name": "payto",
	"version": "2.1.4",
	"description": "Decentralized transfer of assets.",
	"author": "Blockchain Hub",
	"license": "CORE",
	"bugs": {
		"url": "https://github.com/bchainhub/Payto/issues"
	},
	"homepage": "https://github.com/bchainhub/Payto#readme",
	"type": "module",
	"scripts": {
		"clear-cache": "rm -rf node_modules/.vite/",
		"dev": "npm run clear-cache && vite",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@playwright/test": "^1.49.1",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.1",
		"@types/cookie": "^1.0.0",
		"eslint": "^9.17.0",
		"postcss": "^8.4.49",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"tslib": "^2.8.1",
		"typescript": "^5.7.3",
		"vite": "^5.4.11",
		"vitest": "^2.1.8"
	},
	"dependencies": {
		"@fontsource/fira-mono": "^5.1.1",
		"@neoconfetti/svelte": "^2.2.1",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.15.2",
		"@tailwindcss/forms": "^0.5.10",
		"autoprefixer": "^10.4.20",
		"blockchain-wallet-validator": "^1.1.0",
		"exchange-rounding": "^1.1.3",
		"svelte": "^5.17.1",
		"svelte-check": "^4.1.3",
		"svelte-preprocess": "^6.0.3",
		"svelte-transition": "^0.0.17",
		"tailwindcss": "^3.4.17",
		"tailwindcss-logical": "^3.0.1"
	},
	"engines": {
		"node": ">=22"
	}
}
